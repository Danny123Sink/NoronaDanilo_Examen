<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoronaDanilo_Examen.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="3" CornerRadius="0">
                <Label Text="Examen LOGIN " HorizontalTextAlignment="Center" TextColor="Black" FontSize="20"/>
            </Frame>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"></Image>
            <Entry x:Name="txtUsusario"
               Placeholder="Ingrese el usuario">
            </Entry>

            <Entry x:Name="txtPass"
               Placeholder="Ingrese la contraseña"
               IsPassword="True">
            </Entry>

            <Button x:Name="btnAbrir" 
                Text="Abrir"
                Clicked="BtnAbrir_Clicked"
                ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>